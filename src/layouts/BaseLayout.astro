---
interface Props {
  title: string;
  nav?: string;
  description?: string;
  ogImage?: string;
  ogType?: "website" | "product";
  canonicalUrl?: string;
  noIndex?: boolean;
}

const {
  title,
  nav,
  description = "K4MERA is the first digital wigglegram camera. Capture authentic 3D photos with 4 lenses and built-in depth processing.",
  ogImage = "/assets/images/logo.png",
  ogType = "website",
  canonicalUrl,
  noIndex = false,
} = Astro.props;

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://k4mera.world';
const pageUrl = canonicalUrl || Astro.url.href;
const fullOgImage = ogImage.startsWith('http') ? ogImage : `${siteUrl}${ogImage}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO Meta Tags -->
    <meta name="description" content={description} />
    <link rel="canonical" href={pageUrl} />
    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullOgImage} />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:type" content={ogType} />
    <meta property="og:site_name" content="K4MERA" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullOgImage} />

    <!-- Google tag (gtag.js) -->
    <script
      is:inline
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-GHEF0B28WX"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-GHEF0B28WX");
    </script>
    <!-- Font Preconnects -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.cdnfonts.com" crossorigin />

    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400&display=swap"
      rel="stylesheet"
    />
    <link href="https://fonts.cdnfonts.com/css/aileron" rel="stylesheet" />
    <link
      rel="icon"
      type="image/png"
      href="assets/icons/favicon-96x96.png"
      sizes="96x96"
    />
    <link rel="icon" type="image/svg+xml" href="assets/icons/favicon.svg" />
    <link rel="shortcut icon" href="assets/icons/favicon.ico" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="assets/icons/apple-touch-icon.png"
    />
    <meta name="apple-mobile-web-app-title" content="K4MERA" />
    <link rel="manifest" href="assets/icons/site.webmanifest" />
    <title>{title}</title>
  </head>
  <body class="bg-custom-gradient text-custom-black font-inter">
    <canvas
      id="fluid"
      style="position:fixed; inset:0; width:100vw; height:100vh; pointer-events:none; z-index:0;"
    >
    </canvas>
    <Header />
    <main>
      <slot />
    </main>
    <Footer nav={nav} />
    <script src="/fluid.js" is:inline defer></script>
  </body>
</html>
