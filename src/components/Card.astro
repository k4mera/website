---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div
  class="flex-1 flex flex-col items-center p-1 box-border rounded border-2 border-custom-black text-base"
>
  <div class="w-full overflow-hidden">
    <slot />
  </div>

  <h3 class="font-aileron-regular mb-1 text-xl mt-2">{title}</h3>
  <p class="text-sm font-inter px-3 pb-1">{description}</p>
  <div class="mt-2 mb-3">
    <slot name="cta" />
  </div>
</div>
