    top: 5px;
    margin-bottom: 12px;
    z-index: 0;
  }

  #ig_posts .ig_post_likes .ig_user_imgs {
    margin-left: -2px;
  }

  #ig_posts .ig_post_likes .ig_user_imgs img {
    width: 28px;
    height: 28px;
    border-radius: 100%;
    border: 2px solid rgba(255, 254, 253, 0.85);
  }

